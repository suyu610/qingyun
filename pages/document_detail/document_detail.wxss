/* pages/document_detail/document_detail.wxss */
page {
  background-color: #EEEEEE;
  margin-bottom: 62px;
  font-size: 14px;
}

.preview {
  height: 274px;
}

.preview swiper {
  height: 100%;
  width: 100vw;
}

.preview swiper swiper-item image {
  width: 100%;
  height: 100%;
}

.preview swiper swiper-item .mask {
  width: 100%;
  height: 100%;
  background-color: rgb(209, 209, 209);
  position: absolute;
  z-index: 2;
  opacity: 0.1;
}

.preview swiper swiper-item text {
  position: absolute;
  z-index: 2;
  font-size: 24px;
  text-align: center;
  width: 100%;
  line-height: 274px;
  color: #fff;
  font-weight: bold;
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;


}

.doc_info {
  padding: 20px;
  background-color: #fff;
  border-radius: 0 0 20px 20px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  display: inline-block;
  padding-bottom: 10px;
}

.doc_info .first_line .support {
  color: #27B1FF;
  display: inline-block;
  padding-left: 20px;
  font-size: 12px;
  padding-bottom: 10px;
}
.doc_info .first_line .support:first-child{
  padding-left: 0;
}
.doc_info .first_line .support text {
  vertical-align: 1px;
  padding-left: 5px;
}
.category{
  padding-top: 10px;
  font-size: 12px;
}
.category :not(:last-child)::after {
  content: "|";
  padding-left: 10px;
  color: lightgrey;
}

.doc_info .category .college {
  display: inline-block;
}

.major,
.grade {
  padding-left: 10px;
  display: inline-block;
}

.price_info {
  display: flex;
  justify-content: start;
  align-items: center;
}


.upload_time {
  width: 50%;
  text-align: right;
  color: #999999;
  font-size: 12px;
}

.price_info view {
  padding-left: 10px;
  display: inline-block;
  color: #999999;
  font-size: 12px;
}

.price_info .price {
  color: #AA2A1E;
  font-weight: bold;
  padding-left: 0px;
  font-size: 20px;
}

.tagAndTime{
  padding-top: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tags{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tags .tag {
  background-color: #F8F8F8;
  border-radius: 20px;
  padding: 5px 10px;
  text-align: center;
  margin-left: 10px;
  color: #999999;
  font-size: 12px;

  
}
.tag:first-child{
  margin-left: 0;
}

.doc_desc {
  padding-top: 10px;
  color: #999999;
  text-align: justify;
  font-size: 14px;
}



.btns {
  padding-top: 25px;
  display: flex;
  justify-content: space-between;
}

.mark_btn {
  width: 30vw;
  height: 35px;
  line-height: 35px;
  border-radius: 10px;
  background-color: rgba(39, 177, 255, 100);
  color: #fff;
  font-size: 14px;
  text-align: center;
  display: inline-block;
}

.buy_btn {
  display: inline-block;
  width: 55vw;
  height: 35px;
  line-height: 35px;
  border-radius: 10px;
  background-color: rgba(254, 212, 86, 100);
  color: #000;
  font-size: 14px;
  text-align: center;
}

.upload_info .title{
  font-size: 16px;
  display: flex;
  justify-content: space-between;
} 
.upload_info{
  background-color: #fff;
  margin-top: 15px;
  border-radius: 20px  20px 20px 20px;
  padding: 20px;
  color:rgb(61, 61, 61)
}

.upload_info .template .name{
  text-decoration: underline;
}

.upload_info .template{
  color:#999999;
  font-size: 14px;
}

.upload_info .motto{
  color:#999999;

}
.related_info{
  background-color: #fff;
  border-radius: 20px 20px 20px  20px ;
  margin-top: 20px;
  padding-top: 20px;
  padding-left: 20px;
  padding-right: 20px;
}

.related_info .title{
  font-size: 16px;
} 

.related_info .grid{
  margin-bottom: 20px;
}

.related_info .grid .related_doc{
  margin-left: 20px;
  display:inline-block;
  width: 28vw;
  height: 200px;

}
.related_info .grid .related_doc .doc_img{
  background-color: #5bc1fc;
  height: 156px;
  line-height: 156px;
  text-align: center;
  border-radius: 5px;
}

.related_info .grid .related_doc .doc_title{
  padding-top: 8px;
  font-size: 12px;
}
.related_info .grid .related_doc:first-child{
  margin-left: 0;
}

.comment{
  border-radius:  20px 20px 0 0;
  padding-top: 20px;
  background-color: #fff;
}

.comment .title{
  padding-left: 20px;
  display: inline-block;
}

.comment  .all{
  display: inline-block;
  position: absolute;
  right: 20px;
  font-size: 14px;
}



.text-content{
  text-align: justify;
}