<view class="container">
  <view class="introduce">
    <view class="author">
      <van-row gutter="20">
        <van-col span="12">
          <view class="title">
            <view style="">
            </view>
            创建者
          </view>
        </van-col>
        <van-col span="2">
          <view class="cu-avatar round sm" style="float:left"
            style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);">
          </view>
        </van-col>
        <van-col span="5">
          <view class="author_name">黄鹏宇</view>
        </van-col>
        <van-col span="2" class="arrow">
          <van-icon name="arrow" custom-class="arrow" />
        </van-col>
      </van-row>
    </view>

    <view class="contributor">
      <van-row gutter="20">
        <van-col span="12">
          <view class="title">
            <view style="">
            </view>
            贡献者
          </view>
        </van-col>
        <van-col span="9">
          <view class="cu-avatar-group" style="float:left">
            <view class="cu-avatar round sm" wx:for="{{5}}" wx:key="index"
              style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big1000{{index+1}}.jpg);">
            </view>
          </view>
        </van-col>
        <van-col span="2" class="arrow">
          <van-icon color="#F5F5F5" name="arrow" custom-class="arrow" />
        </van-col>
      </van-row>
    </view>
    <view class="number">
      <van-row gutter="20">
        <van-col span="12">
          <van-row>
            <van-col span="10" class="title">
              题目数量
            </van-col>
            <van-col span="10">80道</van-col>
            <van-col span="4" class="arrow">
              <van-icon color="#F5F5F5" name="arrow" custom-class="arrow" />
            </van-col>
          </van-row>
        </van-col>
        <van-col span="12">
          <van-row>
            <van-col span="10" class="title">
              笔记数量
            </van-col>
            <van-col span="10">15篇</van-col>
            <van-col span="4" class="arrow">
              <van-icon name="arrow" custom-class="arrow" />
            </van-col>
          </van-row>
        </van-col>
      </van-row>
    </view>
    <view class="basic-introduce">
      <van-row gutter="20">
        <van-col span="12">
          <van-row>
            <van-col span="10" class="title">
              添加人数
            </van-col>
            <van-col span="14">21人</van-col>
          </van-row>
        </van-col>
        <van-col span="12">
          <van-row>
            <van-col span="10" class="title">
              评论数
            </van-col>
            <van-col span="10">47条</van-col>
            <van-col span="4" class="arrow">
              <van-icon name="arrow" custom-class="arrow" />
            </van-col>
          </van-row>
        </van-col>
      </van-row>
    </view>
    <view class="basic_info">
      <van-row gutter="20">
        <van-col span="12">
          <van-row>
            <van-col span="10" class="title"> 更新时间
            </van-col>
            <van-col span="10" style="line-height: 21px;height: 21rpx;">2021.07.21</van-col>
          </van-row>
        </van-col>
        <van-col span="12">
          <van-row>
            <van-col span="10" class="title">
              迭代版本
            </van-col>
            <van-col span="10">第七版</van-col>
            <van-col span="4" class="arrow">
              <van-icon name="arrow" custom-class="arrow" />
            </van-col>
          </van-row>
        </van-col>
      </van-row>
    </view>
    <view class="basic_info">
      <van-row gutter="20">
        <van-col span="12">
          <view class="title">
            共计学习时间
          </view>
        </van-col>
        <van-col span="9">
          4h 35min </van-col>
        <van-col span="2" class="arrow">
          <van-icon color="#F5F5F5" name="arrow" custom-class="arrow" />
        </van-col>
      </van-row>
    </view>
  </view>

  <view class="center neumorphism">
    <view class="function ">
      <view class="cu-list grid col-{{gridCol}} {{gridBorder?'':'no-border'}}" style="background-color: transparent;">
        <view class="cu-item " wx:for="{{iconList}}" wx:key="index" wx:if="{{index<gridCol*2}}">
          <view class="cuIcon-{{item.icon}} text-{{item.color}}" bindtap="jump2Answer">
            <view class="cu-tag {{item.icon!='warn'? 'bg-yellow':'bg-yellow'}} badge" wx:if="{{item.badge!=0}}">
              <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
            </view>
          </view>
          <text style="font-size: 26rpx;color:black" class="text-bold">{{item.name}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="add_btn">
  <button class="block text-bold add-btn bg-blue ">
    <text class="cuIcon-delete text-white"></text> <text class="text-sm text-white"> 移除我的题库</text> </button>
</view>