/* pages/public/upload/upload.wxss */
.container {
  background-color: #F8F8F8;
  box-sizing: content-box;
  height: 100vh;
  width: 100vw;
}
.uploader_view{
  width: 90vw;
  margin: 10px auto;
  display: flex;
  justify-content: space-between;
}
.upload {
  width: 44vw;
  background-color: #fff;
  border-radius: 10px;
  height: 80px;
  display: inline-block;
  line-height: 80px;
  text-align: center;
  font-size: 14px;
  box-shadow: #efefefe6 1px 5px 20px 0px;
}

.upload text {
  padding-left: 5px;
  vertical-align: 1px;

}

.cell-value{
  font-size: 12px!important;
}
.main {
  width: 90vw;
  margin: 5vw;
  margin-top: 0vw;
  box-shadow: #efefefe6 1px 5px 20px 0px;
  border-radius: 10px;
  background-color: #fff;
}



.preview {
  width: 90vw;
  margin: 10px auto;
  border-radius: 10px;
  background-color: #fff;
  padding:10px 0 0 10px;
}


.input_label {
  color: black !important;
  font-weight: bold !important;
  font-size: 14px !important;
}

.submit_btn {
  padding-bottom: 20px;
  text-align: center;
}

.submit_btn van-button {
  padding-left: 10px;

}

.need_know {
  width: 90vw;
  margin: 5vw;
  padding-bottom: 20px;
}

.need_know .need_know_text {
  padding-top: 5px;
  font-size: 12px;
  text-align: justify;
}

.need_know .need_know_text view {
  padding-top: 10px;
  color: grey;
}