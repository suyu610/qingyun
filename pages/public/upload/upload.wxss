/* pages/public/upload/upload.wxss */
.container {
  background-color: #F8F8F8;
  box-sizing: content-box;
  height: 100vh;
  width: 100vw;
}

.upload {
  width: 90vw;
  background-color: #fff;
  border-radius: 10px;
  height: 80px;
  line-height: 80px;
  text-align: center;
  margin: 5vw;
  font-size: 14px;
  box-shadow: #efefefe6 1px 5px 20px 0px;
}

.main {
  width: 90vw;
  margin: 5vw;
  margin-top: 0vw;
  box-shadow: #D8E6E6E6 0 2px 6px 0;
  border-radius: 10px;
  background-color: #fff;
}


.input_label {
  color: black !important;
  font-weight: bold !important;
  font-size: 14px !important;
}

.submit_btn {
  padding-bottom: 20px;
  text-align: center;
}

.submit_btn van-button {
  padding-left: 10px;

}

.need_know {
  width: 90vw;
  margin: 5vw;
  padding-bottom: 20px;
}
.need_know .need_know_text{
  padding-top: 5px;
  font-size: 12px;
  text-align: justify;
}

.need_know .need_know_text view{
  padding-top: 10px;
  color: grey;
}