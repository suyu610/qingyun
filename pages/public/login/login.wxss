/* pages/public/login/login.wxss */
.container {
  width: 100vw;
  height: 100vh;
  padding: 30px;
  font-size: 12px;

}

.right-circle {
  /*右半圆*/
  width: 12.5px;
  height: 25px;
  background-color: #000;
  border-radius: 0 12.5px 12.5px 0;
  /* 左上、右上、右下、左下 */
}
.baned{
  border-radius: 10px;
  margin-top: 10px;
  height: 10vh;
  line-height: 10vh;
color:#B12341;
  text-align: center;
  background-color: #F5F5F5;
}

.title {
  padding-top: 5vh;
  font-weight: bold;
  font-size: 24px;
}

.sub_title {
  padding-top: 2vh;
  color: grey;
  font-size: 14px;
}

.login_box {
  padding-top: 4vh;
}
.login_form{
  padding-top: 2vh;
}
.inputline {
  background-color: #F5F5F5;
  margin-top: 15px;
  padding: 10px;
  height:50px;
  line-height:50px;
  color: white; 
  border-radius: 5px;
}
.inputline input{
  height: 100%;
  color:black;
}

.login_btn{
  display: flex;
  padding-top: 20px;
  justify-content: space-between;
}
.mark_btn {
  width: 25vw;
  height: 40px;
  line-height: 40px;
  border-radius: 5px;
  background-color: rgba(39, 177, 255, 100);
  color: #fff;
  font-size: 14px;
  text-align: center;
  display: inline-block;
}

.buy_btn {
  display: inline-block;
  width: 55vw;
  height: 40px;
  line-height: 40px;
  border-radius: 5px;
  background-color: rgba(254, 212, 86, 100);
  color: #000;
  font-size: 14px;
  text-align: center;
}

