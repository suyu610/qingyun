/* pages/public/buy_confirm/buy_confirm.wxss */

.container {
  width: 100vw;
  height: 100vh;
  background-color: #F6F6F6;
}

.address {
  display: flex;
  justify-content: space-between;
  width: 90vw;
  border-radius: 10px;
  padding: 10px;
  background-color: #fff;
  margin: 5vh auto;
  margin-bottom: 2vh;
}

.comment {
  width: 90vw;
  border-radius: 10px;
  padding: 10px;
  background-color: #fff;
  margin: 2vh auto;
}

.address .icon {
  display: inline-block;
  vertical-align: top;
}

.address .info {
  padding-left: 10px;
  display: inline-block;
}

.address .name,
.tel {

  display: inline-block;
}

.address .tel {
  padding-left: 10px;
}

.address .address_info {
  color: #afacac;
}

.goods {
  position: relative;
  width: 90vw;
  border-radius: 10px;
  margin: 0 auto;
  padding: 10px;
  background-color: #fff;
}

.goods .title {
  height: 30px;
  line-height: 30px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  font-size: 14px;
  margin-left: 20px;
  margin-right: 20px;

}

.circle_left_1 {
  position: absolute;
  width: 20px;
  height: 20px;
  border-radius: 20px;
  background-color: #F6F6F6;
  left: -10px;
  top: 45%;
}

.circle_right_1 {
  position: absolute;
  width: 20px;
  height: 20px;
  border-radius: 20px;
  background-color: #F6F6F6;
  right: -10px;
  top: 45%;
}

.goods .goods_body {
  padding-bottom: 10px;
  margin-top: 10px;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.goods .goods_body .image {
  margin-top: 10px;
  margin-left: 10px;
  width: 10vw;
  height: 10vw;
}

.goods .goods_body .image image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.goods .goods_body .info {
  width: 70%;
  padding-left: 10px;

}

.goods .goods_body .info .info_title {
  font-weight: bold;
  font-size: 16px;
}

.goods .goods_body .price {
  line-height: 10vw;
  font-weight: bold;
  font-size: 16px;
  vertical-align: top;
}


.goods .goods_body .price {
  margin-right: 10px;
  color: red;
}


.circle_left_2 {
  position: absolute;
  width: 20px;
  height: 20px;
  border-radius: 20px;
  background-color: #EFEFEF;
  left: -10px;
  bottom: 30px;
}

.circle_right_2 {
  position: absolute;
  width: 20px;
  height: 20px;
  border-radius: 20px;
  background-color: #EFEFEF;
  right: -10px;
  bottom: 30px;
}

.need_know {
  width: 90vw;
  margin: 5vw;
  padding-bottom: 20px;
}
.need_know .need_know_text{
  padding-top: 5px;
  font-size: 12px;
  text-align: justify;
}

.need_know .need_know_text view{
  padding-top: 10px;
  color: grey;
}

.input_label {
  color: black !important;
  font-weight: bold !important;
  font-size: 14px !important;
}