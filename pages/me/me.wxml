<!--pages/me/me.wxml-->
<scroll-view class="container" scroll-y="{{true}}">

  <view class="header" bindtap="jump2SettingProfile">
    <view class="avatar beauty_shadow">
      <image src="https://cdns.qdu.life/logo.png"></image>
    </view>
    <view class="title">
      <van-icon name="edit" color="white" size="14" />
      皇甫素素
    </view>
    <view class="subtitle">
      电子信息学院
      <view class="stu_number">2019205913</view>
    </view>
  </view>

  <view class="main_info">
    <view class="remain" bindtap="jump2MoneyList">
      <view class="count">￥ 0.00</view>
      <view class="info_title">我的钱包</view>
    </view>
    <view class="upload_count" bindtap="jump2MyUploadList">
      <view class="count">0 份</view>
      <view class="info_title ">我上传了</view>
    </view>
    <view class="download_count" bindtap="jump2MyUploadList">
      <view class="count">0 次</view>
      <view class="info_title">被下载了</view>
    </view>
    <view class="upload  " bindtap="jump2Upload">
      <van-icon name="fire" color="red" /><text>上传资料</text>
    </view>
  </view>

  <view class="setting">
    <van-cell-group title="资料">
      <van-cell title="我的知识库" icon="shopping-cart" is-link value="2" bindtap="jump2OrderList" />
      <van-cell title="我的收藏" icon="star" is-link value="2" bindtap="jump2StarList" />
    </van-cell-group>
    <van-cell-group title="系统">
      <van-cell icon="chat" is-link value="9" bindtap="jump2MsgList">
        <view slot="title">
          <view class="van-cell-text">我的消息</view>
          <van-tag type="danger">new</van-tag>
        </view>
      </van-cell>
      <van-cell title="反馈建议" icon="comment" is-link>
        <button class='contact_btn' open-type="feedback"/>
      </van-cell>
      <van-cell title="在线客服" icon="wechat" is-link>
        <button class="contact_btn" open-type="contact" />
      </van-cell>
      <van-cell title="关于青云" icon="gem" is-link />
    </van-cell-group>
  </view>
</scroll-view>